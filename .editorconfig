# EditorConfig is awesome. Use, support, give credit: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file and some sane settings
[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Tab indentation for Makefile (no size specified)
[Makefile]
indent_style = tab
